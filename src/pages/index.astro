---
// src/pages/index.astro - Main homepage
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../Sections/Header.astro";
import About from "../Sections/About.astro";
import Benefits from "../Sections/Benefits.astro";
import WebsiteTypesSection from "../Sections/WebsiteTypesSection.astro";
import HostingMaintenance from "../Sections/HostingMaintenance.astro";
import AddOnServices from "../Sections/AddOnServices.astro";
import PortfolioSection from "../Sections/PortfolioSection.astro";
import Testimonials from "../Sections/Testimonials.jsx";
import TechStackSection from "../Sections/TechStackSection.astro";
import FAQ from "../Sections/FAQ.astro";
import QuoteFormSection from "../Sections/QuoteFormSection.astro";
import CTASection from "../Sections/CTASection.astro";
import Stats from "../Sections/Stats.astro";
import Footer from "../Sections/Footer.astro";
import HeroBasic from "../Sections/HeroBasic.astro";
import { siteData } from "@/siteData";
---

<BaseLayout 
  title={`${siteData.title}: Professional Website Development Services`}
  description="Get a lightning-fast, secure, and mobile-first website that converts visitors into customers. Professional web development, hosting, and maintenance services.";
  ogType="website"
>
  <Header />

  <main id="main-content" class="relative">
    <!-- Hero Section -->
    <HeroBasic />
    <!-- Alternative: <Hero /> -->

    <!-- Core Services -->
    <About />
    <Benefits />
    <WebsiteTypesSection />

    <!-- Portfolio & Social Proof -->
    <PortfolioSection />
    <Testimonials client:visible />

    <!-- CTA & Trust Signals -->
    <CTASection />
    <Stats />

    <!-- Technical & Services -->
    <TechStackSection />
    <HostingMaintenance />
    <AddOnServices />

    <!-- Support & Contact -->
    <FAQ />
    <QuoteFormSection />
  </main>

  <Footer />
</BaseLayout>